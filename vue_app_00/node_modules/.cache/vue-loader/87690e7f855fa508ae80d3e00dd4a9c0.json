82034.jpg\" />\r\n            <h4 v-text=\"zx.lname\"></h4>\r\n            <h5 v-text=\"zx.price.toFixed(2)\"></h5>\r\n        </div>\r\n        <mt-button @click=\"loadMore\">加载更多</mt-button>\r\n    </div>\r\n</template>\r\n<script>\r\nexport default {\r\n    data(){\r\n        return {\r\n            list:[],\r\n            pno:1,\r\n            hasMore:true\r\n        }\r\n    },\r\n    created(){\r\n        console.log(1)\r\n        // 1.创建变量保存请求地址\r\n        let url=\"http://127.0.0.1:3000/getGoodList\";\r\n        this.axios.get(url).then(result=>{\r\n            this.list=result.data.data\r\n            console.log(this.list)\r\n        })\r\n        // 2.发送ajax请求\r\n        // 3.接收返回商品数组\r\n        // 4.保存list\r\n    },\r\n    methods: {\r\n        loadMore(){\r\n            if(this.hasMore==false){\r\n                this.$toast(\"没有更多数据了\");\r\n                return\r\n            }\r\n            let url=`http://127.0.0.1:3000/getGoodList?pno=${this.pno++}`;\r\n            console.log(this.pno)\r\n            this.axios.get(url).then(result=>{\r\n                console.log(result)\r\n                this.list=(this.list).concat(result.data.data)\r\n                if(this.pno>result.data.pageCount){\r\n                    this.hasMore=false\r\n                }\r\n            })\r\n        }\r\n    },\r\n}\r\n</script>\r\n<style>\r\n    #app-goodlist{\r\n        display:flex;\r\n        flex-wrap:wrap;\r\n        justify-content:space-between;\r\n        padding:4px\r\n    }\r\n    #app-goodlist .goods-item{\r\n        width:49%;\r\n        border:1px solid #aaa;\r\n        margin:2px 0;\r\n        padding:2px;\r\n        display:flex;\r\n        flex-direction:column;\r\n        min-height:175px;\r\n    }\r\n    #app-goodlist .goods-item img{\r\n        width:100%;\r\n    }\r\n</style>"]}]}